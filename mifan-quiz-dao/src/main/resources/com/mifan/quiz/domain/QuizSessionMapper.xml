            <if test="modified != null">
                #{modified},
            </if>
            <if test="created != null">
                #{created},
            </if>
        </trim>
    </sql>

    <sql id="insertEntityValues">
        <trim suffixOverrides=",">
            <if test="insert.id != null">
                #{insert.id},
            </if>
            <if test="insert.sessionCode != null">
                #{insert.sessionCode},
            </if>
            <if test="insert.quizId != null">
                #{insert.quizId},
            </if>
            <if test="insert.answerNum != null">

            </if>
            <if test="insert.creator != null">
                creator,
            </if>
            <if test="insert.modified != null">
                modified,
            </if>
            <if test="insert.created != null">
                created,
            </if>
        </trim>
    </sql>

    <sql id="insertValues">
        <trim suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="sessionCode != null">
                #{sessionCode},
            </if>
            <if test="quizId != null">
                #{quizId},
            </if>
            <if test="answerNum != null">

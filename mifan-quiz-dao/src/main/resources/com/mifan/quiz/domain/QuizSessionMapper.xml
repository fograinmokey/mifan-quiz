            </if>
            <if test="creator != null">
                creator,
            </if>
            <if test="modified != null">
                modified,
            </if>
            <if test="created != null">
                created,
            </if>
        </trim>
    </sql>

    <sql id="insertEntityColumns">
        <trim suffixOverrides=",">
            <if test="insert.id != null">
                id,
            </if>
            <if test="insert.sessionCode != null">
                session_code,
            </if>
            <if test="insert.quizId != null">
